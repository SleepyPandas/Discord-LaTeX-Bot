DISCORD_TOKEN=your_discord_token_here

# Optional Gemini features
GEMINI_TOKEN=your_gemini_token_here

# Optional chat instruction context
SYSTEM_INSTRUCTION="You are tutoring students."

# Optional log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Dashboard credentials (used by dashboard service)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change-me

# Optional metrics path (docker compose sets this automatically)
METRICS_DB_PATH=/data/metrics.db

# Optional metrics retention policy (defaults shown)
METRICS_RETENTION_DAYS=90
METRICS_MAX_SIZE_BYTES=536870912
METRICS_MAINTENANCE_INTERVAL_SECONDS=60
